<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:itemBackground">#ffffff</item>
        <item name="android:background">@drawable/card_liner_layout</item>
        <!--<item name="android:backgroundTint">#00000000 </item>-->
        <item name="android:dropDownHorizontalOffset">24dp</item>
        <item name="android:dropDownVerticalOffset">24dp</item>
    </style>

    <style name="scroll_view">
        <item name="android:background">@drawable/card_liner_layout</item>
    </style>


    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/scroll_activity_card_show_back</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="suggestionRowLayout">@layout/activity_card_show</item>
        <item name="searchIcon">@drawable/baseline_search_white_18dp</item>
        <item name="closeIcon">@drawable/baseline_close_white_18dp</item>
    </style>
</resources>
