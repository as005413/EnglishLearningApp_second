<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="64dp"
    android:layout_width="match_parent"
    android:background="@color/scroll_activity_card_show_back"
    android:layout_height="?attr/actionBarSize"
    android:orientation="horizontal">

    <designSolutions.CustomEditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/scroll_activity_card_show_back"
        android:backgroundTint="@color/background_tint_search_view"
        android:cursorVisible="false"
        android:drawableStart="@drawable/baseline_search_white_18dp"
        android:drawablePadding="16dp"
        android:inputType="textCapWords"
        android:lines="@android:integer/config_mediumAnimTime"
        android:textColor="@color/black"
        android:textColorHint="@color/smoke_grey"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>