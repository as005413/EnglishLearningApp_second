<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="4dp"
    android:background="@color/toolbar"
    android:layout_height="?attr/actionBarSize"
    android:orientation="horizontal">

    <designSolutions.CustomEditText
        android:id="@+id/editTextSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/background_tint_search_view"
        android:cursorVisible="false"
        android:drawableStart="@drawable/baseline_search_white_18dp"
        android:hint="@string/search"
        android:inputType="textCapWords"
        android:lines="@android:integer/config_mediumAnimTime"
        android:textColorHint="@color/smoke_grey"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909"/>


</androidx.constraintlayout.widget.ConstraintLayout>